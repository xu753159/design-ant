{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "esnext",
      "lib": ["esnext", "dom"],
      "strict": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "baseUrl": ".",
      "pretty": true,
      "importHelpers": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "typings/**/*.ts", "typings/**/*.d.ts","src/*.tsx","src/**/*.tsx"]
  }
  